<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibox.DestoryOrderActivity"
    android:layout_marginTop="5dp">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imagewarn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/warning_fill"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
            <View

                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imagewarn"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="5dp"
                android:id="@+id/view5" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="检测到您的快递"
            android:textSize="16dp"
            android:id="@+id/textView19"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/view5" />
            <TextView
                android:id="@+id/notice_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textView19"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toTopOf="@+id/view6" />
            <View

                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:id="@+id/view6"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19"
                app:layout_constraintBottom_toBottomOf="@+id/toConnect"
                android:layout_marginBottom="8dp" />
       <Button
            android:id="@+id/toCheck"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="查看详情"
           android:background="@drawable/button_shape"
            tools:layout_editor_absoluteX="15dp"
           android:layout_marginBottom="8dp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/view6" />
        <Button
            android:id="@+id/toConnect"
            android:layout_width="wrap_content"
            android:text="联系卖家"
            android:layout_height="48dp"
            android:background="@drawable/button_shape"
            app:layout_constraintLeft_toRightOf="@+id/toCheck"
            android:layout_marginLeft="33dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="33dp" />
            <Button
                android:id="@+id/todestory"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="取消订单"
                android:background="@drawable/button_shape"
                app:layout_constraintLeft_toRightOf="@+id/toConnect"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/view6"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginStart="27dp" />
        </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
